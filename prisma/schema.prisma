generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  firstName    String
  lastName     String
  transactions Transaction[]
}

model Transaction {
  id         Int    @id @default(autoincrement())
  blockchain String
  to         String
  from       String
  amount     Float
  type       String
  user       User?  @relation(fields: [userId], references: [id])
  userId     Int?
}
